<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".EditProfileActivity">

    <FrameLayout
            android:id="@+id/editProfileContainer"
            class="com.lostanimals.tracks.EditProfileFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </FrameLayout>

    <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_person_outline_black"/>

    <Button
            android:id="@+id/profile_image_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileImage"
            android:layout_centerHorizontal="true"
            android:text="Change Profile Image"/>

    <LinearLayout
            android:id="@+id/layout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image_edit"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:weightSum="2">

        <ImageView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/ic_person_outline_black"/>

        <EditText
                android:id="@+id/username_edit"
                android:layout_width="520dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="textPersonName"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layout_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_text"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:weightSum="2">

        <ImageView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/ic_lock_black"/>

        <EditText
                android:id="@+id/password_edit"
                android:layout_width="520dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="textPersonName"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layout_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_text2"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:weightSum="2">

        <ImageView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/ic_email_black"/>

        <EditText
                android:id="@+id/email_edit"
                android:layout_width="520dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="textPersonName"/>
    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_text3"
            android:layout_centerHorizontal="true"
            android:text="Save Changes"
            android:textAlignment="center"/>

</RelativeLayout>