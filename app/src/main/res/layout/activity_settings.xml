<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity">

    <FrameLayout
            android:id="@+id/settingsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/detailsElementBackground"
            android:clickable="true">

    </FrameLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/application_settings"
                android:text="Application Settings"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:fontFamily="sans-serif-medium"
                app:layout_constraintHorizontal_bias="0.439" app:layout_constraintVertical_bias="0.641"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/change_font_settings"
                android:text="Change Font"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:fontFamily="sans-serif-medium"
                android:background="@color/primaryColor"/>

        <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Dark mode / Light mode"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>