<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChangePasswordActivity">

    <FrameLayout
            android:id="@+id/changePasswordContainer"
            class="com.lostanimals.tracks.ChangePasswordFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </FrameLayout>

    <LinearLayout
            android:id="@+id/password_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp">

        <TextView
                android:text="Old Password"
                android:layout_gravity="left"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_width="400dp"
                android:layout_height="30dp"/>

        <EditText
                android:id="@+id/old_password"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/password_layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/password_layout">

        <TextView
                android:text="New Password"
                android:layout_gravity="left"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_width="400dp"
                android:layout_height="30dp"/>

        <EditText
                android:id="@+id/new_password"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/password_layout_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/password_layout_2">

        <TextView
                android:text="Confirm New Password"
                android:layout_gravity="left"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_width="400dp"
                android:layout_height="30dp"/>

        <EditText
                android:id="@+id/new_password_confirm"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"/>
    </LinearLayout>

    <Button
            android:id="@+id/save_changed_password_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_layout_3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" android:layout_marginStart="119dp" android:layout_marginTop="30dp"
            android:layout_marginEnd="119dp" android:gravity="center" android:text="Save New Password"/>

</RelativeLayout>