<resources>
    <!-- Base application theme. -->
    <style name="TracksTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor2</item>
        <item name="android:textColorHint">@color/secondaryTextColor</item>
        <item name="android:windowBackground">@color/primaryBackground</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

</resources>
