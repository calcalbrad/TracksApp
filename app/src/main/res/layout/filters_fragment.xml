<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/linear_filter"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true">

        <TextView
                android:id="@+id/sorting_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/sort_title"/>

        <Spinner android:id="@+id/sorting_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linear_filter"
                android:layout_toRightOf="@+id/linear_filter" />

        <TextView android:id="@+id/species_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/species_title"/>

        <CheckBox android:id="@+id/species_checkbox_dog"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/species_dog"
                  android:onClick="onSpeciesCheckboxClicked"/>

        <CheckBox android:id="@+id/species_checkbox_cat"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/species_cat"
                  android:onClick="onSpeciesCheckboxClicked"/>

        <CheckBox android:id="@+id/species_checkbox_bird"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/species_bird"
                  android:onClick="onSpeciesCheckboxClicked"/>

        <CheckBox android:id="@+id/species_checkbox_rabbit"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/species_rabbit"
                  android:onClick="onSpeciesCheckboxClicked"/>

        <CheckBox android:id="@+id/species_checkbox_horse"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/species_horse"
                  android:onClick="onSpeciesCheckboxClicked"/>

        <CheckBox android:id="@+id/species_checkbox_cow"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/species_cow"
                  android:onClick="onSpeciesCheckboxClicked"/>

        <CheckBox android:id="@+id/species_checkbox_sheep"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/species_sheep"
                  android:onClick="onSpeciesCheckboxClicked"/>

        <CheckBox android:id="@+id/species_checkbox_goat"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/species_goat"
                  android:onClick="onSpeciesCheckboxClicked"/>

        <CheckBox android:id="@+id/species_checkbox_guinea_pig"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/species_guinea_pig"
                  android:onClick="onSpeciesCheckboxClicked"/>

        <CheckBox android:id="@+id/species_checkbox_turtle"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/species_turtle"
                  android:onClick="onSpeciesCheckboxClicked"/>

        <CheckBox android:id="@+id/species_checkbox_other"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/species_other"
                  android:onClick="onSpeciesCheckboxClicked"/>

        <TextView android:id="@+id/colour_text_view"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:text="@string/colour_title"/>

        <CheckBox android:id="@+id/colour_checkbox_black"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/colour_black"
                  android:onClick="onColourCheckboxClicked"/>

        <CheckBox android:id="@+id/colour_checkbox_white"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/colour_white"
                  android:onClick="onColourCheckboxClicked"/>

        <CheckBox android:id="@+id/colour_checkbox_grey"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/colour_grey"
                  android:onClick="onColourCheckboxClicked"/>

        <CheckBox android:id="@+id/colour_checkbox_brown"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/colour_brown"
                  android:onClick="onColourCheckboxClicked"/>

        <CheckBox android:id="@+id/colour_checkbox_red"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/colour_red"
                  android:onClick="onColourCheckboxClicked"/>

        <CheckBox android:id="@+id/colour_checkbox_gold"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/colour_gold"
                  android:onClick="onColourCheckboxClicked"/>

        <CheckBox android:id="@+id/colour_checkbox_other"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/colour_other"
                  android:onClick="onColourCheckboxClicked"/>

        <TextView android:id="@+id/chipped_text_view"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:text="@string/chipped_title"/>

        <CheckBox android:id="@+id/chipped_checkbox_yes"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/chipped_yes"
                  android:onClick="onChippedCheckboxClicked"/>

        <CheckBox android:id="@+id/chipped_checkbox_no"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/chipped_no"
                  android:onClick="onChippedCheckboxClicked"/>

    </LinearLayout>
</ScrollView>